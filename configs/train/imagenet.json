{
    "name": "ImageNet_LT_ResNeXt50_SADE",
    "n_gpu": 1,
    "arch": {
        "type": "ResNeXt50Model",
        "args": {
            "num_classes": 1000,
            "reduce_dimension": true,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 3
        }
    },
    "data_loader": {
        "type": "ImageNetLTDataLoader",
        "args": {
            "data_dir": "./data/ImageNet_LT",
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.025,
            "weight_decay": 0.0007,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "LogitAdjustExpertLoss",
        "args": {
            "loss_type": "LA",
            "lambda_var": 1.0,
            "power": 1.6,
            "dataset_type": "ImageNet"
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 180,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 180,
        "save_dir": "saved/imagenet",
        "save_period": 60,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}